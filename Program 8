try:
    with open("data.txt", "r") as f:
        line = f.readline().strip()
        
        # 2. ValueError: e.g., if 'line' contains "abc" instead of "123"
        number = int(line) 
        print(f"Number from file: {number}")

    # 3. Handling Multiple Exceptions (Tuple)
except (FileNotFoundError, PermissionError) as e:
    print(f"File System Error: {e}")

except ValueError:
    # 4. Specific handling for data conversion errors
    print("Value Error: File content is not a valid number.")

else:
    print("Success: File read and value converted perfectly.")
    print("File Content is:", content)

finally:
    print("Process Complete: Resources cleared.")
